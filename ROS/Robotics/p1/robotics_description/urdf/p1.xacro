<?xml version="1.0"?>
<robot name="p1" xmlns:xacro="http://ros.org/wiki/xacro">


    <xacro:property name="pi" value="3.1415"/>


    <link name="dummy"></link>
    
    <!--I want to add a base link-->
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.10" length="0.01"/>
            </geometry>
            <material name="blue">
                <color rgba=" 1 1 1 1"/>
            </material>

        </visual>
        <collision>
            <geometry>
               <cylinder radius="0.10" length="0.01"/>
            </geometry>
        </collision>
    </link>

    <link name="link1">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.5"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.5"/>
            </geometry>
        </collision>
    </link>

    <link name="link2">
        
        <visual>
            <origin xyz="0 0.25 0.0" rpy="${pi/2} 0 0 "/>
            <geometry>
                <cylinder radius="0.02" length="0.5"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0.25 0.0" rpy="${pi/2} 0 0.0"/>
            <geometry>
                <cylinder radius="0.02" length="0.5"/>
            </geometry>
        </collision>
    </link>

    <link name="link3">
        <visual>
            <origin xyz="0 0.25 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.02" length="0.5"/>
            </geometry>
            <material name="blue">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0.25 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.02" length="0.5"/>
            </geometry>
        </collision>
    </link>

    <link name="link4">
        <visual>
            <geometry>
                <box size="0.08 0.08 0.08"/>
            </geometry>
            <material name="black">
                <color rgba=" 1 1 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.08 0.08 0.08"/>
            </geometry>
        </collision>
    </link>



    <joint name="dummy_link" type="fixed">
        <origin xyz="0 0 0.05" rpy="0 0 0" />
        <parent link="dummy"/>
        <child link="base_link"/>
    </joint>



    <joint name="joint1" type="prismatic">
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="link1"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="0.25" effort="10" velocity="1"/>
        <dh d="0.0" theta="0.0" a="0.0" alpha="0.0"/>
    </joint>

    <joint name="joint2" type="revolute">
        <origin xyz="0 0.0 0.25" rpy="0 0 0"/>
        <parent link="link1"/>
        <child link="link2"/>
        <axis xyz="0 0 1"/>
        <limit lower="${-pi/2}" upper="${pi/2}" effort="10" velocity="1"/>
        <dh d="0.0" theta="0.0" a="0.0" alpha="0.0"/>
    </joint>

    <joint name="joint3" type="revolute">
        <origin xyz="0 0.5 0." rpy="0 ${-pi/2} 0"/>
        <parent link="link2"/>
        <child link="link3"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="${pi}" effort="10" velocity="1"/>
        <dh d="0.0" theta="0.0" a="0.0" alpha="0.0"/>
    </joint>

    <joint name="joint4" type="revolute">
        <origin xyz="0 0.5 0" rpy="${-pi/2} 0 0"/>
        <parent link="link3"/>
        <child link="link4"/>
        <axis xyz="0 0 1"/>
        <limit lower="${-pi/2}" upper="${pi/2}" effort="10" velocity="1"/>
        <dh d="0.0" theta="0.0" a="0.0" alpha="0.0"/>
    </joint>

</robot>
